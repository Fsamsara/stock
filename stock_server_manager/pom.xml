<?xml version="1.0"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.metersbonwe.stock</groupId>
		<artifactId>stock</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>stock_server_manager</artifactId>
	<packaging>war</packaging>
	<name>stock_server_manager</name>
	<url>http://maven.apache.org</url>

	<dependencies>
		<dependency>
			<groupId>com.metersbonwe.stock</groupId>
			<artifactId>stock_pom</artifactId>
		</dependency>
		<dependency>
			<groupId>com.metersbonwe.stock</groupId>
			<artifactId>stock_configuration</artifactId>
		</dependency>
		<dependency>
			<groupId>com.alibaba</groupId>
			<artifactId>dubbo</artifactId>
		</dependency>
		<dependency>
			<groupId>com.metersbonwe.stock</groupId>
			<artifactId>stock_controller</artifactId>
		</dependency>
	</dependencies>
	<build>
		<finalName>stock_server_manager</finalName>
		<plugins>
			<plugin>
				<groupId>cn.tony</groupId>
				<artifactId>tools-maven-plugin</artifactId>
				<version>0.0.3</version>
				<configuration>
					<server-host>10.100.20.85</server-host>
					<password>password01!</password>
					<tomcatHome>/opt/tomcat7-64-manager</tomcatHome>
					<finalName>stock_server_manager</finalName>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.7</version>
				<executions>
					<execution>
						<id>copy-resources</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${basedir}/target/stock_server_manager/WEB-INF/classes</outputDirectory>
							<resources>
								<resource>
									<directory>../stock_configuration/src/main/resources</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
